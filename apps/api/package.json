{
  "name": "replimap-backend",
  "version": "1.0.0",
  "description": "RepliMap License Management API - Cloudflare Workers + D1",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "db:init": "wrangler d1 execute replimap-dev --local --file=./schema.sql",
    "db:init:dev": "wrangler d1 execute replimap-dev --file=./schema.sql",
    "db:init:prod": "wrangler d1 execute replimap-prod --file=./schema.sql",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env production",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "stripe": "^14.10.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "wrangler": "^3.99.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
